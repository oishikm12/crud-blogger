<html lang="en">
  <%- include("./partials/head.ejs") %>

  <body>
    <%- include("./partials/nav.ejs",{isAuth: isAuth}) %>

    <div class="create-blog content">
      <form
        action="/blogs/update/<%=blog._id%>"
        enctype="multipart/form-data"
        method="POST"
      >
        <label for="title">Blog title:</label>
        <input type="text" id="title" name="title" value="<%=blog.title%>" />
        <label for="snippet">Blog snippet:</label>
        <input
          type="text"
          id="snippet"
          name="snippet"
          value="<%=blog.snippet%>"
        />
        <label for="category">Blog category:</label>
        <input
          type="text"
          id="category"
          name="category"
          value="<%=blog.category%>"
        />
        <label for="body">Blog body:</label>
        <textarea id="body" name="body"><%=blog.body%></textarea>
        <label for="image">Blog image:</label>
        <input type="file" id="image" value="<%=blog.image%>" name="image" />
        <button>Submit</button>
      </form>
    </div>

    <%- include("./partials/footer.ejs") %>
  </body>
</html>
